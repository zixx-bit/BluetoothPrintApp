<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

 <androidx.appcompat.widget.AppCompatButton
     android:id="@+id/btnPrint"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="36dp"
     android:text="Print"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintStart_toStartOf="@+id/textView8"
     app:layout_constraintTop_toBottomOf="@+id/textView8" />

 <androidx.appcompat.widget.AppCompatButton
     android:id="@+id/btnPairUnpair"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="12dp"
     android:text="PairUnpair"
     app:layout_constraintStart_toStartOf="@+id/btnPrint"
     app:layout_constraintTop_toBottomOf="@+id/btnPrintImage" />

 <androidx.appcompat.widget.AppCompatButton
     android:id="@+id/btnPrintImage"
     android:layout_width="0dp"
     android:layout_height="0dp"
     android:layout_marginTop="4dp"
     app:layout_constraintStart_toStartOf="@+id/btnPrint"
     app:layout_constraintTop_toBottomOf="@+id/btnPrint" />

 <TextView
     android:id="@+id/textView"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:text="Date:"
     android:textSize="20sp"
     app:layout_constraintEnd_toStartOf="@+id/date"
     app:layout_constraintHorizontal_bias="0.5"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent" />

 <TextView
     android:id="@+id/date"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:textSize="15sp"
     app:layout_constraintEnd_toStartOf="@+id/textView3"
     app:layout_constraintHorizontal_bias="0.5"
     app:layout_constraintStart_toEndOf="@+id/textView"
     app:layout_constraintTop_toTopOf="parent" />

 <TextView
     android:id="@+id/textView3"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:text="Rct No"
     android:textSize="20sp"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.5"
     app:layout_constraintStart_toEndOf="@+id/date"
     app:layout_constraintTop_toTopOf="parent" />

 <TextView
     android:id="@+id/textView4"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="28dp"
     android:paddingBottom="10dp"
     android:text="Weight in Litres:"
     android:textSize="18sp"
     app:layout_constraintEnd_toStartOf="@+id/weightLitres"
     app:layout_constraintHorizontal_bias="1.0"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/textView" />

 <TextView
     android:id="@+id/textView5"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="10dp"
     android:paddingTop="16dp"
     android:text="Suppliers Name:"
     android:textSize="18sp"
     app:layout_constraintEnd_toStartOf="@+id/suppliersName"
     app:layout_constraintHorizontal_bias="0.5"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/textView4" />

 <EditText
     android:id="@+id/suppliersName"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="4dp"
     android:ems="10"
     android:hint="Enter suppliers name"
     android:inputType="text"
     android:textSize="12sp"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.5"
     app:layout_constraintStart_toEndOf="@+id/textView5"
     app:layout_constraintTop_toTopOf="@+id/textView5" />

 <EditText
     android:id="@+id/IdNumber"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="4dp"
     android:ems="10"
     android:hint="Enter Id no"
     android:inputType="number"
     android:textSize="12sp"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.5"
     app:layout_constraintStart_toEndOf="@+id/textView6"
     app:layout_constraintTop_toBottomOf="@+id/suppliersName" />

 <EditText
     android:id="@+id/clerkName"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="8dp"
     android:hint="clerk name"
     android:inputType="text"
     android:textSize="12sp"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.5"
     app:layout_constraintStart_toEndOf="@+id/textView8"
     app:layout_constraintTop_toBottomOf="@+id/route" />

 <EditText
     android:id="@+id/route"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="8dp"
     android:ems="10"
     android:hint="Enter Route
"
     android:inputType="text"
     android:textSize="12sp"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.5"
     app:layout_constraintStart_toEndOf="@+id/textView7"
     app:layout_constraintTop_toBottomOf="@+id/IdNumber" />

 <TextView
     android:id="@+id/textView8"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="8dp"
     android:paddingTop="10dp"
     android:text="Weight Clerk:"
     android:textSize="18sp"
     app:layout_constraintEnd_toStartOf="@+id/clerkName"
     app:layout_constraintHorizontal_bias="0.5"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/textView7" />

 <TextView
     android:id="@+id/textView7"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="4dp"
     android:paddingTop="10dp"
     android:text="Route:"
     android:textSize="18sp"
     app:layout_constraintEnd_toStartOf="@+id/route"
     app:layout_constraintHorizontal_bias="0.5"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/textView6" />

 <TextView
     android:id="@+id/textView6"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="4dp"
     android:paddingTop="10dp"
     android:text="ID No:"
     android:textSize="18sp"
     app:layout_constraintEnd_toStartOf="@+id/IdNumber"
     app:layout_constraintHorizontal_bias="0.5"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/textView5" />

 <EditText
     android:id="@+id/weightLitres"
     android:layout_width="0dp"
     android:layout_height="0dp"
     android:ems="10"
     android:hint="weight"
     android:inputType="number"
     android:paddingBottom="10dp"
     android:textSize="15sp"
     app:layout_constraintBottom_toTopOf="@+id/suppliersName"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.0"
     app:layout_constraintStart_toEndOf="@+id/textView5"
     app:layout_constraintTop_toTopOf="@+id/textView4"
     app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>